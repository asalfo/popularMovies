<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asalfo.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Default">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MovieAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MovieAppDetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asalfo.movies.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_preference"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asalfo.movies.MainActivity" />
        </activity>
        <activity
            android:name=".ReviewsActivity"
            android:theme="@style/MovieReviewsTheme"
            android:label="@string/title_activity_reviews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asalfo.movies.DetailActivity" />
        </activity>
 <provider
     android:authorities="@string/content_authority"
     android:name=".data.MovieProvider"
     android:exported="false"
     android:syncable="true"/>
    </application>

</manifest>
