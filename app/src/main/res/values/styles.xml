<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/movie_app_black</item>
        <item name="colorPrimaryDark">@color/movie_app_dark_black</item>
    </style>

    <!-- Main activity theme. -->
    <style name="MovieAppTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.MovieApp</item>
    </style>

    <style name="MovieAppDetailTheme" parent="MovieAppTheme">
        <item name="displayOptions">useLogo|showHome</item>
    </style>
    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.MovieApp" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BaseShadowTextStyle" parent="@style/wrap">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="BaseTextStyle" parent="@style/wrap" />
    <style name="PrimaryText" parent="@style/BaseTextStyle">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="PrimaryShadowText" parent="@style/BaseShadowTextStyle">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="PrimaryText.Small" parent="@style/PrimaryShadowText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="PrimaryText.Large" parent="@style/PrimaryShadowText">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="PrimaryText.Micro" parent="@style/PrimaryShadowText">
        <item name="android:textSize">@dimen/text_micro</item>
    </style>
    <style name="PrimaryText.NoShadow.SmallMedium" parent="@style/PrimaryText">
        <item name="android:textSize">@dimen/text_small_medium</item>
    </style>
    <style name="PrimaryText.NoShadow.Small" parent="@style/PrimaryText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="Button" parent="@style/wrap">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/selectable_text_light_to_dark</item>
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>
    <!-- Style for forecast listview -->
    <style name="MovietListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

</resources>
