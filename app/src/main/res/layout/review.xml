<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/TitleSummaryItemPaddingBottom"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ic_review"
            android:layout_width="@dimen/phoneRatingWidgetStarWidth"
            android:layout_height="@dimen/phoneRatingWidgetStarHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_review" />

        <TextView
            android:id="@+id/review_count"
            style="@style/Text.Subhead.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/ic_review"
            android:lineSpacingMultiplier="0.85"
            android:text="7.5"
            android:paddingRight="4dp" />


        <TextView
            style="@style/Text.Subhead.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/ic_review"
            android:lineSpacingMultiplier="0.85"
            android:text="Review(s)"
            android:paddingRight="4dp"
            android:layout_marginTop="20dip" />

    </RelativeLayout>
</LinearLayout>